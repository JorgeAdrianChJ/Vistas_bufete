@model Servicios_bufete.Models.Cita

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar</h1>

<h3>Esta seguro que desea eliminar la cita?</h3>
<div>
    <h4>Cita</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Fecha)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Fecha)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Especialidad)
        </dt>
        <dd class = "col-sm-10">
                <select asp-for="@Model.Especialidad"
                        class="form-control" asp-items="ViewBag.Especialidades" disabled>
                    </select>
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Solicitud)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Solicitud)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Estado)
        </dt>
        <dd class = "col-sm-10">
            @if (Model.Fecha>DateTime.Now)
                    {
                        <a>Activa</a>
                    }
                    else
                    {

                        <a>Acudio</a>
                    }
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index">Volver a la gestión</a>
    </form>
</div>
